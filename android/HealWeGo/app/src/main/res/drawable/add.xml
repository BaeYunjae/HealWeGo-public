<!-- res/drawable/round_button_with_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- 둥근 모서리 배경 -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/darkcyan"/> <!-- 배경색 설정 -->
      <corners android:radius="100dp"/> <!-- 둥근 모서리 설정 -->
    </shape>
  </item>

  <!-- 벡터 아이콘 (중앙에 "+" 아이콘) -->
  <item
      android:left="5dp"
      android:right="5dp"
      android:top="5dp"
      android:bottom="5dp">
    <vector
        android:width="24dp"
        android:height="24dp"
        android:viewportWidth="960"
        android:viewportHeight="960"
        xmlns:android="http://schemas.android.com/apk/res/android">
      <path
          android:pathData="M440,520L200,520v-80h240v-240h80v240h240v80L520,520v240h-80v-240Z"
          android:fillColor="@color/white"/> <!-- 아이콘 색상 설정 -->
    </vector>
  </item>

</layer-list>
