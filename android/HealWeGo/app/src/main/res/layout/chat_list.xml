<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:text="같이 갈래요?"
        android:textSize="20sp"
        android:layout_marginRight="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="460dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="330dp"
        android:layout_height="470dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 첫 번째 버튼 -->
            <android.widget.Button
                android:id="@+id/chatroom1"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_marginBottom="30dp"
                android:background="@color/palecyan"
                android:onClick="onButton1Clicked"
                android:text="을왕리 해수욕장\n목적지: 을왕리\n탑승장소: 서울역\n탑승시간: 오후 3시\n 2/4 \n #힐링 #여성만"
                android:textSize="18sp" />

            <!-- 두 번째 버튼 -->
            <android.widget.Button
                android:id="@+id/chatroom2"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_marginBottom="30dp"
                android:background="@color/palecyan"
                android:onClick="onButton1Clicked"
                android:text="을왕리 해수욕장\n목적지: 을왕리\n탑승장소: 서울역\n탑승시간: 오후 3시\n 3/4\n#익스트림 #20대만"
                android:textSize="18sp" />

            <!-- 세 번째 버튼 -->
            <android.widget.Button
                android:id="@+id/chatroom3"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_marginBottom="30dp"
                android:background="@color/palecyan"
                android:onClick="onButton1Clicked"
                android:text="을왕리 해수욕장\n목적지: 을왕리\n탑승장소: 서울역\n탑승시간: 오후 3시\n혼자 가기"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/filterButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="160dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:contentDescription="필터 버튼"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:srcCompat="@drawable/filter"/>

    <HorizontalScrollView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/filterButton">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="160dp">

            <!-- 첫 번째 버튼 -->
            <android.widget.Button
                android:id="@+id/healing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/tag_button"
                android:text="#힐링"
                android:textColor="@color/darkteal"
                android:textSize="18sp" />

            <!-- 두 번째 버튼 -->
            <android.widget.Button
                android:id="@+id/extreme"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/tag_button"
                android:text="#익스트림"
                android:textColor="@color/darkteal"
                android:textSize="18sp" />

            <!-- 세 번째 버튼 -->
            <android.widget.Button
                android:id="@+id/eating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/tag_button"
                android:text="#먹부림"
                android:textColor="@color/darkteal"
                android:textSize="18sp" />
        </LinearLayout>

    </HorizontalScrollView>

    <android.widget.Button
        android:id="@+id/wantCreateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="20dp"
        android:text="방 만들기"
        android:textSize="20dp"
        android:background="@drawable/tag_button"
        android:backgroundTint="@color/teal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
