<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/room_list_theme"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textRoomInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="방 제목"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/scdream6"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/room_list_tag"                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/marker"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/locationInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/scdream4"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="장소명"
                    android:textColor="@color/darkteal"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/themeTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="테마"
                    android:textSize="14sp"
                    android:textColor="@color/darkteal"
                    android:fontFamily="@font/scdream5"
                    android:background="@drawable/room_list_tag"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/genderTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textSize="14sp"
                    android:textColor="@color/darkteal"
                    android:fontFamily="@font/scdream5"
                    android:background="@drawable/room_list_tag"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/timeTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간"
                    android:textSize="14sp"
                    android:textColor="@color/darkteal"
                    android:fontFamily="@font/scdream5"
                    android:background="@drawable/room_list_tag"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/peopleInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0/4"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:fontFamily="@font/scdream6"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingRight="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
